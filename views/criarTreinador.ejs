<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Treinador</title>
    <link rel="stylesheet" href="/cadastroTreinador.css">
</head>
<body>
    <div class="form-container">
        <h2>Cadastro de Treinador</h2>
        <form action="/treinadores" method="POST">
            <label for="nome">Nome do Treinador:</label>
            <input type="text" id="nome" name="nome" required>

            <label for="pokemonIds">Selecione os Pokémons:</label>
            <select id="pokemonIds" name="pokemonIds" multiple required>
                <% pokemons.forEach(function(pokemon) { %>
                    <option value="<%= pokemon.id %>"><%= pokemon.nome %> - <%= pokemon.tipo %></option>
                <% }); %>
            </select>

            <button type="submit">Cadastrar Treinador</button>
        </form>
        <a href="/">Voltar à Pokédex</a>
    </div>
</body>
</html>
